<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>

        <item name="colorControlNormal">@color/darkGray</item>
        <item name="colorControlActivated">@color/lightPurple</item>
        <item name="colorControlHighlight">@color/lightPurple</item>

    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/blue_facebook_button_background_border</item>
    </style>

</resources>
