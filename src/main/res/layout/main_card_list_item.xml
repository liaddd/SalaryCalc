<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_container"
    android:layout_width="@dimen/main_card_width"
    android:layout_height="@dimen/main_card_height"
    android:layout_gravity="bottom|end"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginLeft="@dimen/margin_16dp"
    android:layout_marginBottom="@dimen/margin_24dp"
    android:background="@drawable/main_activity_white_background_with_border"
    android:elevation="@dimen/margin_8dp">

    <TextView
        android:id="@+id/list_item_title_card_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_item_subtitle_card_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:fontFamily="@font/rubik_bold"
        android:textColor="@color/mid_purple"
        android:textSize="@dimen/text_36sp" />

    <TextView
        android:id="@+id/list_item_subtitle_card_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:fontFamily="@font/rubik_bold"
        android:textColor="@color/main_card_second_text"
        android:textSize="@dimen/text_16sp" />

</RelativeLayout>